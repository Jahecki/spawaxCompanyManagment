<Window x:Class="WpfApp2.Orders.Panel.Materialy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.Orders.Panel"
        mc:Ignorable="d"
        Title="Materialy" Height="250" Width="300">
    <Grid>
        <StackPanel>
            <!-- ComboBox do wyboru numeru materiału -->
            <ComboBox x:Name="MaterialComboBox" Width="200" Height="30" Margin="0,10" />

            <!-- TextBox do wprowadzenia ilości -->
            <TextBox x:Name="QuantityTextBox" Width="200" Height="30" Margin="0,10" />

            <!-- Przycisk zatwierdzający -->
            <Button Content="Dodaj materiał" Width="100" Height="30" Click="AddMaterialButton_Click" />
        </StackPanel>
    </Grid>
</Window>
